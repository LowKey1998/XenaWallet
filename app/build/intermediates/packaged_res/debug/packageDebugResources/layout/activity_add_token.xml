<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Token"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Dropdown 1 -->
    <Spinner
        android:id="@+id/network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Dropdown 2 -->
    <EditText
        android:id="@+id/coingecko_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background_disabled"
        android:padding="16dp"
        android:enabled="false"
        android:hint="CoinGecko ID"
        android:visibility="gone"
        android:layout_marginBottom="24dp"/>
    <EditText
        android:id="@+id/contractAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background_disabled"
        android:padding="16dp"
        android:enabled="false"
        android:hint="Contract Address"
        android:layout_marginBottom="24dp"/>
    <EditText
        android:id="@+id/name"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background_disabled"
        android:padding="16dp"
        android:enabled="false"
        android:hint="Name"
        android:layout_marginBottom="24dp"/>
    <EditText
        android:id="@+id/symbol"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background_disabled"
        android:padding="16dp"
        android:enabled="false"
        android:hint="Symbol"
        android:layout_marginBottom="24dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/button_check_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Check"
        android:textColor="#cccccc"
        android:background="@drawable/button_disabled"
        />
</LinearLayout>
