<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:tint="#444"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="12dp"
                android:text="Send"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"/>
        </RelativeLayout>

        <!-- ADDRESS INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Recipient Address"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Enter wallet address"
                android:padding="12dp"
                android:textSize="14sp"
                android:inputType="textNoSuggestions"/>

            <!-- Address error -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvAddressError"
                android:text="Invalid address"
                android:textSize="12sp"
                android:textColor="#E53935"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- AMOUNT INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/btnMax"
                    android:text="MAX"
                    android:textStyle="bold"
                    android:textColor="#6C63FF"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input">

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0.00"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textSize="16sp"/>

                <!-- Toggle unit -->
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/btnToggleUnit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:text="ETH"
                    android:textStyle="bold"
                    android:textColor="#6C63FF"/>
            </RelativeLayout>

            <!-- Minimum hint -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvMin"
                android:text="Minimum send amount: 0.001 ETH"
                android:textSize="12sp"
                android:textColor="#888"
                android:layout_marginTop="4dp"/>

            <!-- Amount error -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvAmountError"
                android:text="Insufficient balance"
                android:textSize="12sp"
                android:textColor="#E53935"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- CHECK FEES -->
        <Button
            android:id="@+id/btnCheckFees"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:text="Check Fees"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_action_button"/>

        <!-- FEES RESULT -->
        <LinearLayout
            android:id="@+id/layoutFees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_card"
            android:padding="16dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Network Fee"
                android:textColor="#888"
                android:textSize="12sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0.00021 ETH (~$0.48)"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- SEND BUTTON -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_action_button"/>

    </LinearLayout>
</ScrollView>
