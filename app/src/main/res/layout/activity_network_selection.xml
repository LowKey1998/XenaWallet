<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#CCCCCC"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#D3D3D3"
        android:backgroundTintMode="src_in" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Network"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USDT can be sent via various networks"
        android:textSize="14sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Network List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/network_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Repeat this block for each network option -->


            <!-- Add more items like above for CELO, TON, POLYGON, TRC20 -->
        </LinearLayout>
    </ScrollView>

    <!-- Footer warning -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F4F0"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:gravity="start|center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check the network of the senderâ€™s wallet to ensure you receive via the same network"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
