<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Back"
        app:tint="#000000" />

    <!-- Illustration -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:contentDescription="Reset illustration" />

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let’s reset your password"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginTop="24dp"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please provide your phone number and we’ll send a reset code to your verified email address."
        android:textSize="14sp"
        android:textColor="#6B6B6B"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- Phone Input Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <!-- Country Code -->
        <Spinner
            android:id="@+id/spinnerCountryCode"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:padding="12dp" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:hint="Phone number"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:enabled="false"
        android:background="@drawable/bg_button_disabled"
        android:textColor="#FFFFFF" />

</LinearLayout>
